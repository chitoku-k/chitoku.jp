{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "*": [
        "*",
        "typings/*"
      ],
      "components/*": [
        "src/components/*"
      ]
    },
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "typings/**/*.d.ts",
    "node_modules/babel-plugin-react-intl-auto/**/*.d.ts"
  ]
}
